<Window x:Class="Karttest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Karttest"
        xmlns:mapsui="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="1200" Width="1200">
    <Grid x:Name="MainGrid">

        <mapsui:MapControl x:Name="MapControl" />

        <Grid x:Name="UIOverlay">
            <Button x:Name="StartEditButton"
                    Content="Start edit"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0"
                    Padding="10,5,10,5"
                    Click="StartEdit_Click"
                    IsHitTestVisible="True"
                    Focusable="False" />

            <Button x:Name="CancelEditButton"
                    Content="Cancel edit"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,50,10,0"
                    Padding="10,5,10,5"
                    Click="StopEdit_Click"
                    IsHitTestVisible="True"
                    Focusable="False" />
            
            <Button x:Name="SaveEditButton"
                    Content="Save edit"
                    IsEnabled="False"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,90,10,0"
                    Padding="10,5,10,5"
                    IsHitTestVisible="True"
                    Focusable="False" Click="SaveEditButton_OnClick" />
            
        </Grid>
    </Grid>
</Window>